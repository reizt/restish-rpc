{
	"name": "restish-rpc",
	"version": "1.0.0-alpha.8",
	"repository": "git@github.com:reizt/restish-rpc.git",
	"author": "reizt <reizt.dev@gmail.com>",
	"license": "MIT",
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"module": "./lib/index.mjs",
	"exports": {
		".": {
			"import": "./lib/index.mjs",
			"require": "./lib/index.cjs",
			"types": "./lib/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": ["lib"],
	"scripts": {
		"dev": "nodemon --exec 'run-s dev.clear dev.build dev.start' --watch src --ext ts --delay 0.2 --quiet",
		"dev.build": "node --no-warnings esbuild.mjs dev",
		"dev.start": "node tmp/dev-server.mjs",
		"dev.clear": "clear",
		"clean": "rm -rf lib",
		"build": "run-s clean build.*",
		"build.cjs": "node --no-warnings esbuild.mjs cjs",
		"build.esm": "node --no-warnings esbuild.mjs esm",
		"build.types": "tsc --project tsconfig.tsc.json",
		"check-all": "run-p typecheck fmt.check",
		"fmt": "biome check --apply .",
		"fmt.check": "biome check .",
		"typecheck": "tsc --incremental --noEmit",
		"ut": "vitest run",
		"ut.watch": "vitest watch"
	},
	"dependencies": {
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@types/node": "^20.12.11",
		"esbuild": "^0.21.1",
		"lefthook": "^1.6.10",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	}
}
